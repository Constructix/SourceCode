<UserControl x:Class="CommunicatingBetweenComponents.JobDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommunicatingBetweenComponents"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Row="4">
        <Grid.ColumnDefinitions >
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
            <TextBox Text="ID" Style="{StaticResource}"/>
            <TextBlock Grid.Column="1" Text="{Binding ID}" ></TextBlock>
        <TextBox Text="Title" Grid.Row="1" Style="{StaticResource}"/>
        <TextBlock Grid.Column="1" Text="{Binding ID}" ></TextBlock>
    </Grid>
</UserControl>
